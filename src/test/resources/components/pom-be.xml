<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.fedex.scm.sf</groupId>
  <artifactId>silverfabric-maven-plugin-test</artifactId>
  <version>0.16</version>

  <packaging>jar</packaging>

  <name>Silver Fabric Maven Plugin Test</name>
  <description>Maven Plugin for creating Silver Fabric Components Test.</description>

  <properties>
    <override>true</override>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.tibco.silverfabric</groupId>
          <artifactId>silverfabric-maven-plugin</artifactId>
          <version>0.16</version>
          <configuration>
            <brokerConfig>
              <brokerURL>http://srh00611.ute.fedex.com:8080</brokerURL>
              <username>sefsdev_operate</username>
              <password>test123</password>
            </brokerConfig>
            <componentName>GSEFS-CoreEngine-ShipmentCore</componentName>
            <plan>plan-be.xml</plan>
            <override>${override}</override>
            <features>
              <feature>
                <name>HTTP Support</name>
                <description>Support for HTTP routing</description>
                <properties>
                  <property>
                    <name>HTTPS Enabled</name>
                    <value>false</value>
                  </property>
                  <property>
                    <name>HTTP Enabled</name>
                    <value>true</value>
                  </property>
                  <property>
                    <name>Routing Directly To Endpoints</name>
                    <value>false</value>
                  </property>
                </properties>
              </feature>
            </features>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>create</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.tibco.silverfabric</groupId>
            <artifactId>silverfabric-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>default-install</id>
                <phase>install</phase>
                <goals>
                  <goal>create-components</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>delete</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.tibco.silverfabric</groupId>
            <artifactId>silverfabric-maven-plugin</artifactId>
            <version>0.16</version>
            <executions>
              <execution>
                <id>default-install</id>
                <phase>install</phase>
                <goals>
                  <goal>delete-components</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>update</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.tibco.silverfabric</groupId>
            <artifactId>silverfabric-maven-plugin</artifactId>
            <version>0.16</version>
            <executions>
              <execution>
                <id>default-install</id>
                <phase>install</phase>
                <goals>
                  <goal>update-components</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>


  </profiles>
</project>