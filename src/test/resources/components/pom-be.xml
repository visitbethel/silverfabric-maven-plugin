<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.tibco.silverfabric</groupId>
  <artifactId>silverfabric-maven-plugin-test</artifactId>
  <version>0.16</version>

  <packaging>jar</packaging>

  <name>Silver Fabric Maven Plugin</name>
  <description>Maven Plugin for creating Silver Fabric Components and Stacks.</description>

  <properties>
    <spring.version>3.2.1.RELEASE</spring.version>
    <maven.plugin.version>3.3</maven.plugin.version>
    <maven.api.version>3.2.5</maven.api.version>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.tibco.silverfabric</groupId>
          <artifactId>silverfabric-maven-plugin</artifactId>
          <version>0.16</version>
          <configuration>
            <brokerConfig>
              <brokerURL>${broker.url}</brokerURL>
              <username>sefsdev_operate</username>
              <password>test123</password>
            </brokerConfig>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>


  <profiles>
    <profile>
      <id>create</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.tibco.silverfabric</groupId>
            <artifactId>silverfabric-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>default-install</id>
                <phase>install</phase>
                <goals>
                  <goal>create-components</goal>
                </goals>
                <configuration>
                  <componentName>__UNIT_TEST_Component</componentName>
                  <componentType>TIBCO BusinessEvents:2.5.0</componentType>
                  <enablerName>TIBCO BusinessEvents container</enablerName>
                  <enablerVersion>2.5.0.1</enablerVersion>
                  <description>My New Component</description>
                  <defaultSettings>
                    <defaultSetting>
                      <name>Default Priority</name>
                      <value>5</value>
                    </defaultSetting>
                  </defaultSettings>
                  <options>
                    <option>
                      <name>Maximum Activation Time in seconds</name>
                      <value>60</value>
                    </option>
                  </options>
                  <runtimeContextVariables>
                    <runtimeContextVariable>
                      <name>Example RCV</name>
                      <value>bar</value>
                      <type>1</type>
                      <export>true</export>
                    </runtimeContextVariable>
                  </runtimeContextVariables>
                  <features>
                    <feature>
                      <name>Application Logging Support</name>
                      <description>Application Logging Support</description>
                      <infoDescription>infoDescription</infoDescription>
                      <properties>
                        <property>
                          <name>Checkpoint Frequency In Seconds</name>
                          <value>300</value>
                        </property>
                        <property>
                          <name>Archive Application Logs</name>
                          <value>true</value>
                        </property>
                        <property>
                          <name>Log File Pattern</name>
                          <value><![CDATA[  /../domaindata/tra/${TIBCO_DOMAIN_NAME}/logs/*.log,/./tibco/tra/5.8/logs/*.log,/../domaindata/tra/${TIBCO_DOMAIN_NAME}/application/logs/.*.log]]></value>
                        </property>
                      </properties>
                    </feature>

                  </features>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>

      </build>
    </profile>

    <profile>
      <id>delete</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.tibco.silverfabric</groupId>
            <artifactId>silverfabric-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>default-install</id>
                <phase>install</phase>
                <goals>
                  <goal>delete-components</goal>
                </goals>
                <configuration>
                  <componentName>__UNIT_TEST_Component</componentName>
                  <componentType>TIBCO BusinessEvents:2.5.0</componentType>
                  <enablerName>TIBCO BusinessEvents container</enablerName>
                  <enablerVersion>2.5.0.1</enablerVersion>
                  <description>My New Component</description>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

    <profile>
      <id>L1</id>
      <properties>
        <broker.url>http://urh00172.ute.fedex.com:8080</broker.url>
      </properties>
    </profile>
    <profile>
      <id>L2</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <broker.url>http://irh00610.ute.fedex.com:8080</broker.url>
      </properties>
    </profile>
    <profile>
      <id>L3</id>
      <properties>
        <broker.url>http://srh00611.ute.fedex.com:8080</broker.url>
      </properties>
    </profile>

  </profiles>

</project>